{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<section class="mt-24">
    <h1 class="text-3xl font-bold text-center m-4">Me<span class="text-sky-400"> Contacter</span></h1>
</section>

<section class="mt-4 w-1/2 flex justify-center mb-4">
    <div class="w-full max-w-sm p-4 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
        <form class="space-y-6" action="#">
            <h5 class="text-xl font-medium text-gray-900 dark:text-white text-center">Votre message</h5>
            <div class="m-4">
                <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                <input type="email" name="email" id="email" class="p-2 dark:bg-gray-900 dark:text-gray-900 text-sm focus:ring-blue-500 dark:focus:border-blue-500 block w-full dark:placeholder-gray-400 text-white" placeholder="exemple@gmail.com" required>
            </div>
            <div class="m-4">
                <label for="object" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Objet</label>
                <input type="text" name="object" id="object" placeholder="Subject" class="p-2 dark:bg-gray-900 dark:text-gray-900 text-sm focus:ring-blue-500 dark:focus:border-blue-500 block w-full dark:placeholder-gray-400 text-white" required>
            </div>
            <div class="m-4">
                <label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Message</label>
                <textarea type="text" name="message" id="message" class="h-24 p-2 dark:bg-gray-900 dark:text-gray-900 text-sm focus:ring-blue-500 dark:focus:border-blue-500 block w-full dark:placeholder-gray-400 text-white" required></textarea>
            </div>
            <button type="submit" class="w-1/2 m-4 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Envoyer</button>
        </form>
        <div>
            <div class="flex text-white items-center m-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 dark:text-white dark:hover:text-sky-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
                </svg>
                <p class="px-4">06 06 06 06 06</p>
            </div>

            <div class="flex text-white items-center m-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="dark:text-white w-4 h-4 dark:hover:text-sky-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
                <p class="px-4">ourir.yanis@gmail.com</p>
            </div>

            <div class="flex text-white items-center m-4">
            <a href="#" class="text-gray-500 hover:text-gray-900 dark:text-white dark:hover:text-sky-400">
                    <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z" clip-rule="evenodd"/>
                    </svg>
                    <span class="sr-only">GitHub account</span>
                </a>
                <p class="px-4">Github</p>
            </div>
        </div>
    </div>

</section>
{% endblock %}
